{
    "name": "ohdearapp/ohdear-pulse",
    "description": "Integrate Oh Dear with Laravel Pulse",
    "keywords": [
        "ohdearapp",
        "laravel",
        "ohdear-pulse"
    ],
    "homepage": "https://github.com/ohdearapp/ohdear-pulse",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.9.3",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "laravel/pulse": "^1.4.3",
        "spatie/laravel-package-tools": "^1.92.7"
    },
    "require-dev": {
        "nunomaduro/collision": "^7.10|^8.8.2",
        "orchestra/testbench": "^9.0|^10.4|^11.0",
        "pestphp/pest": "^2.35|^3.0",
        "pestphp/pest-plugin-laravel": "^2.4|^3.0",
        "spatie/laravel-ray": "^1.40.2"
    },
    "autoload": {
        "psr-4": {
            "OhDear\\OhDearPulse\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OhDear\\OhDearPulse\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "clear": "@php vendor/bin/testbench package:purge-ohdear-pulse --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": [
            "@composer run prepare",
            "@php vendor/bin/testbench workbench:build --ansi"
        ],
        "start": [
            "Composer\\Config::disableProcessTimeout",
            "@composer run build",
            "@php vendor/bin/testbench serve"
        ],
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "OhDear\\OhDearPulse\\OhDearPulseServiceProvider"
            ],
            "aliases": {
                "OhDearPulse": "OhDear\\OhDearPulse\\Facades\\OhDearPulse"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
